<%- include('../partials/head'); %>
<%- include('../partials/header_connected'); %>

<section class="commande" id="commande"> 
    <div class="container">
        <div class="skill">
            <div class="head">
                <h3>Vos services</h3>
                <hr>
            </div>
            <div class="items">
                <h4>Domaine</h4>
                <table>
                    <tr>
                        <td>ID</td>
                        <td>Domaine name</td>
                        <td>Gestion</td>
                    </tr>
                    <% for(var i=0; i<nbr_domain; i++) { %>
                        <tr>
                            <td><%= i+1 %></td>
                            <td><%= list_domain[i] %></td>
                            <td>
                                <a href="/auth/service?service=domaine&id=<%= i+1 %>&name=<%= name %>">
                                    <button class="btn btn-primary">Domaine<%= i+1 %></button>
                                </a>
                            </td>
                        </tr>
                    <% } %>
                </table>
                <h4>Site web</h4>
                <table>
                    <tr>
                        <td>ID</td>
                        <td>Site name</td>
                        <td>Gestion</td>
                    </tr>
                    <% for(var i=0; i<nbr_site; i++) { %>
